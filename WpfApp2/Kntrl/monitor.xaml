<UserControl x:Class="WpfApp2.Kntrl.monitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2.Kntrl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>
        <Border Background="White" Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{DynamicResource ucButtons}" Content="Sepete Ekle" Width="84" x:Name="sepete_ekle" Click="sepete_ekle_Click">

                </Button>
            </StackPanel>
        </Border>
        <DataGrid x:Name="dtg_monitor" ItemsSource="{Binding}">
        </DataGrid>
        <Border Grid.Row="0"/>
    </Grid>
</UserControl>
